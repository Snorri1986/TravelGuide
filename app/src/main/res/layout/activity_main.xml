<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.snorri.travelguide.MainActivity"
    android:background="@drawable/mountains_lakes_800x600"
    >

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="187dp"
        android:layout_height="58dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="209dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="148dp"
        android:text="@string/btnLogin" />

    <Button
        android:id="@+id/Register"
        android:layout_width="187dp"
        android:layout_height="58dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="146dp"
        android:text="@string/btnReg" />

    <Button
        android:id="@+id/btnFacebookAuth"
        android:layout_width="187dp"
        android:layout_height="58dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="114dp"
        android:layout_marginBottom="77dp"
        android:text="@string/btnFaceBookAuth" />

    <TextView
        android:id="@+id/txtWelcome"
        android:layout_width="196dp"
        android:layout_height="62dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="167dp"
        android:text="@string/txtWelcome"
        android:textColor="#FF0000"
        android:textSize="35sp" />
</RelativeLayout>