<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WorkActivity"
    android:background="@drawable/lighthouse_800x600"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="111dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="277dp"
        android:layout_marginTop="73dp"
        android:layout_marginEnd="22dp"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/local_profile_image"
        android:layout_width="166dp"
        android:layout_height="111dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_crop_original_black_24dp"
        />

    <Button
        android:id="@+id/btn_add_local_photo"
        android:layout_width="213dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="180dp"
        android:layout_marginTop="14dp"
        android:text="@string/btn_add_local_photo" />

    <TextView
        android:id="@+id/tvGreetings"
        android:layout_width="111dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="172dp"
        android:layout_marginTop="74dp"
        android:text="@string/tvGreetings"
        android:textSize="24sp" />

</RelativeLayout>